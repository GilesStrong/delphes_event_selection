PREFIX=/afs/cern.ch/sw/lcg/app/releases/ROOT/6.06.00/x86_64-slc6-gcc49-opt/root/bin/
ROOTCFLAGS=$(shell $(PREFIX)/root-config --cflags)
ROOTLIBS=$(shell $(PREFIX)/root-config --libs)
C++ = g++
C_FLAGS = -g
DELPHES=$(HOME)/programs/Delphes-3.3.2
INCLUDES = -I$(HOME)/programs/include -I$(PREFIX)/include -I$(DELPHES) -I$(DELPHES)/external
LIBRARIES = -lGenVector -lRooFit -lRooFitCore -lMinuit -O2 -lboost_regex -lboost_filesystem -lboost_system -L$(PREFIX)/lib -lDelphes -L$(DELPHES)
ROOT = $(ROOTCFLAGS) $(ROOTLIBS)
FLAGS =  $(INCLUDES) $(LIBRARIES) $(C_FLAGS) $(ROOT)
OBJS = main.o delphesReader.o

delphes_event_selection: $(OBJS)
	$(C++) $(OBJS) -o delphes_event_selection $(FLAGS) 
	
main.o: main.cc main.hh finalstateCuts.hh delphesReader.h myMethods.hh
	$(C++) -c main.cc $(FLAGS)  
	
delphesReader.o: delphesReader.C delphesReader.h
	$(C++) -c delphesReader.C $(FLAGS)                            

clean:                                              
	rm ./*.o ./*~ ./\#*
